<resources>
    <!--Component style-->
    <!--the style could be used directly on layout or used in the theme default-->
    <style name="Widget.Golden.Template" parent="" />

    <!--Toolbar style-->
    <style name="Widget.Golden.Template.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:minHeight">?actionBarSize</item>
        <item name="android:background">?android:colorBackground</item>
        <item name="titleTextAppearance">?textAppearanceHeadline6</item>
        <item name="titleTextColor">@color/neutral_emphasis_high</item>
        <item name="subtitleTextAppearance">?textAppearanceSubtitle1</item>
        <item name="subtitleTextColor">@color/neutral_emphasis_medium</item>
        <item name="contentInsetStartWithNavigation">@dimen/space_half</item>
        <item name="contentInsetStart">0dp</item>
    </style>

    <style name="Widget.Golden.Template.AppBarLayout" parent="Widget.MaterialComponents.AppBarLayout.Surface">
        <item name="liftOnScroll">true</item>
    </style>

    <style name="Widget.Golden.Template.ActionButton.Overflow" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">?colorNeutral</item>
    </style>

    <style name="Widget.Golden.Template.Toolbar.Button.Navigation" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:tint">?colorNeutral</item>
    </style>

    <!--Bottom navigation style-->
    <style name="Widget.Golden.Template.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="elevation">@dimen/elevation_high</item>
        <item name="android:background">@drawable/rect_round_top_double</item>
        <item name="backgroundTint">@color/so_dark_variant</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="itemIconTint">@color/bottom_navigation_item</item>
        <item name="itemTextColor">@color/bottom_navigation_item</item>
    </style>

    <!--Button style-->
    <!--Flat-->
    <style name="Widget.Golden.Template.Button.Flat" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:minHeight">@dimen/min_touch_area</item>
        <item name="android:minWidth">@dimen/min_button_width</item>
        <item name="android:paddingStart">@dimen/space_default</item>
        <item name="android:paddingEnd">@dimen/space_default</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAppearance">?textAppearanceButton</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/space_quarter</item>

        <item name="backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/on_primary</item>
        <item name="iconTint">@color/on_primary</item>
        <item name="rippleColor">@color/neutral_emphasis_low</item>
    </style>

    <style name="Widget.Golden.Template.Button.Flat.PrimaryVariant" parent="Widget.Golden.Template.Button.Flat">
        <item name="backgroundTint">@color/primary_variant</item>
    </style>

    <style name="Widget.Golden.Template.Button.Flat.Secondary" parent="Widget.Golden.Template.Button.Flat">
        <item name="backgroundTint">@color/secondary</item>
        <item name="android:textColor">@color/on_secondary</item>
        <item name="iconTint">@color/on_secondary</item>
    </style>

    <style name="Widget.Golden.Template.Button.Flat.Tertiary" parent="Widget.Golden.Template.Button.Flat">
        <item name="backgroundTint">@color/neutral</item>
        <item name="android:textColor">@color/on_neutral</item>
        <item name="iconTint">@color/on_neutral</item>
        <item name="rippleColor">@color/on_neutral_emphasis_low</item>
    </style>

    <style name="Widget.Golden.Template.Button.Flat.Error" parent="Widget.Golden.Template.Button.Flat">
        <item name="backgroundTint">@color/error</item>
        <item name="android:textColor">@color/on_error</item>
        <item name="iconTint">@color/on_error</item>
    </style>

    <!--Large text button-->
    <style name="Widget.Golden.Template.Button.Flat.LargeText" parent="Widget.Golden.Template.Button.Flat">
        <item name="android:textSize">@dimen/font_size_h3</item>
        <item name="android:textColor">@color/so_dark</item>
        <item name="android:textAlignment">center</item>
    </style>

    <!--Large icon button-->
    <style name="Widget.Golden.Template.Button.Flat.LargeIcon" parent="Widget.Golden.Template.Button.Flat">
        <item name="iconPadding">0dp</item>
        <item name="iconSize">@dimen/icon_medium</item>
    </style>

    <style name="Widget.Golden.Template.Button.Flat.LargeIcon.Secondary" parent="Widget.Golden.Template.Button.Flat.Secondary">
        <item name="iconPadding">0dp</item>
        <item name="iconSize">@dimen/icon_medium</item>
    </style>

    <style name="Widget.Golden.Template.Button.Outlined.LargeIcon" parent="Widget.Golden.Template.Button.Outlined">
        <item name="iconPadding">0dp</item>
        <item name="iconSize">@dimen/icon_medium</item>
    </style>

    <style name="Widget.Golden.Template.Button.Outlined.LargeIcon.Secondary" parent="Widget.Golden.Template.Button.Outlined.Secondary">
        <item name="iconPadding">0dp</item>
        <item name="iconSize">@dimen/icon_medium</item>
    </style>

    <style name="Widget.Golden.Template.Button.Flat.LargeIcon.Tertiary" parent="Widget.Golden.Template.Button.Flat.Tertiary">
        <item name="iconPadding">0dp</item>
        <item name="iconSize">@dimen/icon_medium</item>
    </style>

    <style name="Widget.Golden.Template.Button.Flat.LargeIcon.Error" parent="Widget.Golden.Template.Button.Flat.Error">
        <item name="iconPadding">0dp</item>
        <item name="iconSize">@dimen/icon_medium</item>
    </style>

    <!--swiped list side buttons-->
    <style name="Widget.Golden.Template.Button.Flat.LargeIcon.Square" parent="Widget.Golden.Template.Button.Flat.LargeIcon">
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:minWidth">@dimen/min_touch_area</item>
        <item name="android:minHeight">@dimen/min_touch_area</item>
        <item name="cornerRadius">0dp</item>
    </style>

    <style name="Widget.Golden.Template.Button.Flat.LargeIcon.Square.Secondary" parent="Widget.Golden.Template.Button.Flat.LargeIcon.Secondary">
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:minWidth">@dimen/min_touch_area</item>
        <item name="android:minHeight">@dimen/min_touch_area</item>
        <item name="cornerRadius">0dp</item>
    </style>

    <style name="Widget.Golden.Template.Button.Flat.LargeIcon.Square.Tertiary" parent="Widget.Golden.Template.Button.Flat.LargeIcon.Tertiary">
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:minWidth">@dimen/min_touch_area</item>
        <item name="android:minHeight">@dimen/min_touch_area</item>
        <item name="cornerRadius">0dp</item>
    </style>

    <style name="Widget.Golden.Template.Button.Flat.LargeIcon.Square.Error" parent="Widget.Golden.Template.Button.Flat.LargeIcon.Error">
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:minWidth">@dimen/min_touch_area</item>
