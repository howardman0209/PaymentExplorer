    <style name="Widget.Golden.Template.Button.Flat.QuickLaunch" parent="Widget.Golden.Template.Button.Flat">
        <item name="android:elevation">@dimen/elevation_low</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:minHeight">@dimen/min_card_height</item>
        <item name="android:padding">@dimen/round_corner_default</item>
        <item name="android:textAppearance">?textAppearanceHeadline5</item>
        <item name="android:letterSpacing">0</item>
        <item name="cornerRadius">@dimen/round_corner_default</item>
