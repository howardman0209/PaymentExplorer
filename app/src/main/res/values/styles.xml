        <item name="android:textColor">@color/neutral</item>
        <item name="iconTint">@android:color/transparent</item>
        <item name="iconTintMode">add</item>
    </style>

    <style name="Widget.Golden.Template.Button.PaymentMethod.NoBackground" parent="Widget.Golden.Template.Button.PaymentMethod">
