<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/space_default"
            android:paddingTop="@dimen/space_double"
            android:text="@string/app_name"
            android:textAppearance="?textAppearanceHeadline4"
            android:textColor="@color/theme_purple_800" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/space_default"
            android:paddingBottom="@dimen/space_default"
            android:text="@string/label_app_version_no"
            android:textAppearance="?textAppearanceBody1" />

    </LinearLayout>
</layout>